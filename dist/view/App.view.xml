<mvc:View 
	controllerName="com.projetos.desafio.controller.App"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	displayBlock="true" 
	xmlns="sap.m"
	>
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<VBox
						justifyContent="Center"
						alignItems="Center"
						>
						<items>
							<ComboBox
								id="combo"
								placeholder="Converter para"
								selectionChange="onChange"
								>
								<items>
									<core:ListItem
										text="Romano"
										key="1"
										/>
									<core:ListItem
										text="Arábico"
										key="2"
										/>
								</items>
							</ComboBox>
							<Input
								id="input"
								placeholder="Insira o algorismo"
								liveChange="onConvert"
								/>
							<Text
								id="resultado"
								text="Insira a conversão desejada"
								/>
						</items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>